                        {{ form_row(form.lastname)}}
                    </div>
                </div>
                    {{ form_row(form.email) }}
                    <br>
                    <div class="text-center">
                        {{ form_row(form.subject) }}
                    </div>
                    <br>
                    {{ form_row(form.content) }}
                    <br>
                    {{ form_row(form.submit) }}
                {{ form_end(form) }}
                <br>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <strong><h3>Boucherie Benoit Paux</h3></strong>
