{% extends 'base.html.twig' %}

{% block title %}Ajouter Une Adresse{% endblock %}

{% block content %}
    <div class="td-light">
        <h1>Ajouter Une Adresse</h1>
        <br>
        <a href="{{ path('account_adress') }}"> Retour a mes adresses </a><br>
        <br>
        {{ form_start(form) }}
            {{ form_row(form.name)}}
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.firstname)}}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.lastname)}}
                </div>
            </div>
            {{ form_row(form.company)}}
            {{ form_row(form.adress)}}
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.postal)}}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.city)}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.phone)}}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.cell)}}
                </div>
            </div>
        {{ form_end(form) }}
        <br>
    </div>    
{% endblock %}
